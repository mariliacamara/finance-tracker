{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,

    "strictNullChecks": true,
    "noImplicitAny": true,

    "target": "es2023",
    "module": "es2022",
    "moduleResolution": "node",

    "esModuleInterop": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "paths": {
      "#/*": ["./src/*"]
    }
  }
}
